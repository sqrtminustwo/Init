{
    "files_root": [
        "c++",
        "opengl"
    ],
    "structure": {
        "default": {
            "dirs": [
                [
                    "src"
                ],
                [
                    "include"
                ]
            ],
            "files": [
                {
                    "name": "^main\\.cpp$",
                    "src_path": [
                        "src"
                    ],
                    "dst_path": [
                        "src"
                    ]
                },
                {
                    "name": "^CMakePresets\\.json$",
                    "src_path": [
                        "configs"
                    ],
                    "dst_path": []
                },
                {
                    "name": "^CMakeLists\\.txt$",
                    "src_path": [
                        "configs"
                    ],
                    "dst_path": []
                },
                {
                    "name": "^\\.clangd$",
                    "src_path": [
                        "clang"
                    ],
                    "dst_path": []
                }
            ]
        },
        "glfw": {
            "dirs": [
                [
                    "external",
                    "include",
                    "GLFW"
                ],
                [
                    "external",
                    "lib"
                ]
            ],
            "files": [
                {
                    "name": "^.*$",
                    "src_path": [
                        "GLFW",
                        "include"
                    ],
                    "dst_path": [
                        "external",
                        "include",
                        "GLFW"
                    ]
                },
                {
                    "name": "^libglfw3\\.a$",
                    "src_path": [
                        "GLFW",
                        "lib"
                    ],
                    "dst_path": [
                        "external",
                        "lib"
                    ]
                }
            ]
        },
        "glad": {
            "dirs": [
                [
                    "include",
                    "glad"
                ],
                [
                    "include",
                    "KHR"
                ],
                [
                    "include",
                    "src"
                ]
            ],
            "files": [
                {
                    "name": "^glad\\.h$",
                    "src_path": [
                        "GLAD",
                        "glad"
                    ],
                    "dst_path": [
                        "include",
                        "glad"
                    ]
                },
                {
                    "name": "^khrplatform\\.h$",
                    "src_path": [
                        "GLAD",
                        "KHR"
                    ],
                    "dst_path": [
                        "include",
                        "KHR"
                    ]
                },
                {
                    "name": "^glad\\.c$",
                    "src_path": [
                        "GLAD",
                        "src"
                    ],
                    "dst_path": [
                        "include",
                        "src"
                    ]
                }
            ]
        },
        "stb": {
            "dirs": [
                [
                    "include",
                    "stb"
                ]
            ],
            "files": [
                {
                    "name": "^.*$",
                    "src_path": [
                        "stb"
                    ],
                    "dst_path": [
                        "include",
                        "stb"
                    ]
                }
            ]
        },
        "github": {
            "files": [
                {
                    "name": "^.+$",
                    "src_path": [
                        "github"
                    ],
                    "dst_path": []
                }
            ]
        }
    }
}
